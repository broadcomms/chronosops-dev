# ChronosOps Demo Environment Configuration

# =========================================
# Screen Capture Service (runs natively)
# =========================================
SCREEN_CAPTURE_PORT=4000
GRAFANA_URL=http://localhost:3001
DASHBOARD_UID=chronosops-demo
CAPTURE_INTERVAL_MS=5000
BUFFER_SIZE=60
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080
HEADLESS=false

# =========================================
# VideoWatcher Configuration
# =========================================
SCREEN_CAPTURE_URL=http://localhost:4000
VIDEO_POLL_INTERVAL_MS=10000
VIDEO_MAX_FRAMES_PER_BATCH=5
VIDEO_WATCHER_ENABLED=true

# =========================================
# Execution Mode
# =========================================
# kubernetes = Use real kubectl commands
# simulated = Use demo app API (fallback)
# auto = Try kubectl first, fall back to API
EXECUTION_MODE=auto

# =========================================
# Kubernetes Configuration (if EXECUTION_MODE=kubernetes)
# =========================================
# KUBECONFIG=/path/to/kubeconfig
# K8S_CONTEXT=minikube
K8S_ALLOWED_NAMESPACES=demo,staging
K8S_ALLOWED_ACTIONS=rollback,restart,scale
K8S_DRY_RUN=true

# =========================================
# Demo App Configuration
# =========================================
DEMO_APP_URL=http://localhost:8080
SIMULATE_LATENCY_MS=500
SIMULATE_FAILURE_RATE=0

# =========================================
# Gemini API Configuration
# =========================================
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-3-flash-preview
GEMINI_DEFAULT_THINKING_BUDGET=8192
