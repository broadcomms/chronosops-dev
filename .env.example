# ChronosOps Environment Configuration

# ===========================================
# Gemini API Configuration (Required)
# ===========================================
GEMINI_API_KEY=your-gemini-api-key-here

# Gemini model identifiers
GEMINI_MODEL=gemini-3-flash-preview
GEMINI_PRO_MODEL=gemini-3-pro-preview
GEMINI_IMAGE_MODEL=gemini-3-pro-image-preview

# Server Configuration
PORT=3000


# Server Configuration
PORT=3000

# Execution Mode (simulated | kubernetes | auto)
EXECUTION_MODE=kubernetes

# Kubernetes Configuration
K8S_CONTEXT=docker-desktop
K8S_NAMESPACE=development
K8S_ALLOWED_NAMESPACES=demo,development,default
K8S_DRY_RUN=false

# Prometheus (Kubernetes NodePort)
PROMETHEUS_URL=http://localhost:30090

# Code Evolution
CODE_EVOLUTION_AUTO_APPROVE=true
CODE_EVOLUTION_MAX_RETRIES=3

# Remediation
REMEDIATION_ESCALATION_TIMEOUT=30000
REMEDIATION_VERIFY_DELAY=15000

# Observation (vision, metrics) Configuration
ANOMALY_DETECTION_MODE=hybrid 
PROMETHEUS_ALERT_THRESHOLD_ERROR_RATE=0.05
VISION_CAPTURE_INTERVAL=10000